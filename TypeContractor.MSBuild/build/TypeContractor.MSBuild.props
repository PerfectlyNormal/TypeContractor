<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<DevelopmentDependency>true</DevelopmentDependency>
		
		<!--The folder where the custom task will be present. It points to inside the nuget package. -->
		<_TypeContractor_TaskFolder>$(MSBuildThisFileDirectory)..\tasks\net6.0</_TypeContractor_TaskFolder>
		<!--Reference to the assembly which contains the MSBuild Task-->
		<CustomTasksAssembly>$(_TypeContractor_TaskFolder)\$(MSBuildThisFileName).dll</CustomTasksAssembly>
	</PropertyGroup>

	<!--Register our custom task-->
	<UsingTask TaskName="$(MSBuildThisFileName).GenerateApiTypes" AssemblyFile="$(CustomTasksAssembly)" />

	<!--Task parameters default values, this can be overridden-->
	<PropertyGroup>
		<TypesOutputPath Condition="'$(TypesOutputPath)' == ''">App\src\api</TypesOutputPath>
	</PropertyGroup>
</Project>
